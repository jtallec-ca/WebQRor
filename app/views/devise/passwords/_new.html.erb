<!-- New Passwords Partial for Bootstrap Modal -->
<div>
	<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", method: :post) do |f| %>
	  <%= f.email_field :email, placeholder: "Email", required: true %>
	  <%= f.form_group do %>
	  <hr>
	  	<%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
	  <% end %>
	<% end %>
</div>

