<div class="page-header">
  <h2>Change your password</h2>
</div>
<div class="col-sm-9">
  <%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", method: :put) do |f| %>
  	<%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, placeholder: "New Password", required: true %>
    <%= f.password_field :password, placeholder: "Confirm New Password", required: true %>
    <%= f.form_group do %>
    	<%= f.submit "Change Password", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>
<div class="col-sm-3">
  <%= render "devise/shared/links" %>
</div>

