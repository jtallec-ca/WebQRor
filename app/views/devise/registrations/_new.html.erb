<div>
	<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
	  <%= f.email_field :email, :autofocus => true, placeholder: "Email",  required: true  %>
	  <%= f.text_field :first_name, label: "First Name", placeholder: "First Name", required: true %>
    <%= f.text_field :last_name, label: "Last Name", placeholder: "Last Name", required: true %>
	  <%= f.password_field :password, placeholder: "Password",  required: true %>
	  <%= f.password_field :password_confirmation, label: "Confirm Password", placeholder: "Password",  required: true %>
	  <%= f.form_group do %>
	  	<%= f.submit "Sign up", class: "btn btn-primary" %>
	  <% end %>
	<% end %>
</div>