<div class="page-header">
  <h2>Sign in</h2>
</div>
<div class="col-sm-9">
  <%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
    <%= f.email_field :email, :autofocus => true, placeholder: "Email",  required: true %>
    <%= f.password_field :password, placeholder: "Password", required: true %>
    <%= f.form_group do %>
  	  <% if devise_mapping.rememberable? -%>
  	  	<%= f.check_box :remember_me %>
  	  <% end %>
    <% end %>
    <%= f.form_group do %>
    	<%= f.submit "Sign in", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>
<div class="col-sm-3">
  <%= render "devise/shared/links" %>
</div>