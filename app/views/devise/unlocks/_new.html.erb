
<div>
	<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", method: :post) do |f| %>
	  <%= f.email_field :email, :autofocus => true, placeholder: "Email",  required: true  %>
	  <%= f.form_group do %>
	  	<%= f.submit "Resend unlock instructions", class: "btn btn-primary" %>
	  <% end %>
	<% end %>
</div>
